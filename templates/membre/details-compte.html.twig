{% extends 'base.html.twig' %}

{% block title %}Mes infomations personnelles{% endblock %}

{% block meta %}

	<meta name="description" content="Consultez vos informations personnelles et gérez votre compte utilisateur en toute simplicité ! Sur cette page, accédez à votre profil complet. Vous avez la liberté de modifier vos informations et si vous le souhaitez, supprimez votre compte en toute facilité. Célébrez chaque instant avec les meilleurs champagnes, tout en bénéficiant d'un service client attentionné et respectueux de vos besoins.">

	<meta name="author" content="David Pires">
	
{% endblock %}

{% block body %}


<div class="container home">

<h1 class="text-center mb-4 liNav">Mes informations</h1>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success mt-4 text-center">
                {{message}}
            </div>
        {% endfor %}

		<table class="table">
			<tbody>
				<tr class="text-color tab-respons">
					<th scope="col">Nom :</th>
					<td>{{ app.user.nom }}</td>
				</tr>
				<tr class="text-color tab-respons ">

					<th scope="col">Prénom :</th>
					<td>{{ app.user.prenom }}</td>
				</tr>
				<tr class="text-color tab-respons ">
					<th scope="col">Email :</th>
					<td>{{ app.user.email }}</td>
				</tr>
				<tr class="text-color tab-respons ">
					<th scope="col">Adresse :</th>
					<td>{{ app.user.adresse }}</td>
				</tr>
                <tr class="text-color tab-respons">
					<th scope="col">Ville :</th>
					<td>{{ app.user.ville }}</td>
				</tr>
                <tr class="text-color tab-respons">
					<th scope="col">Code Postal :</th>
					<td>{{ app.user.codePostal}}</td>
				</tr>
                <tr class="text-color tab-respons">
					<th scope="col">Date de Naissance :</th>
					<td>{{ app.user.dateNaissance|date('d-m-Y')}}</td>
				</tr>
                <tr class="text-color tab-respons">
					<th scope="col">Date d'inscription :</th>
					<td>{{ app.user.dateEnregistrement|date('d-m-Y')}}</td>
				</tr>
            </table>
                

                <div class="d-flex justify-content-center">
                <button class="rounded bg-black mb-4 mt-4 w-25"><i class="fa-regular fa-pen-to-square" style="color: #1cc819;"></i><a class="btn-compte" href="{{ path('app_modifier_mon_compte')}}">Modifier mes informations</a>
                <button class="rounded bg-black mb-4 mt-4 w-25"><i class="fa-regular fa-trash-can" style="color: #ec0404;"></i><a class="btn-compte" href="{{ path('app_supprimer_compte', {'id': app.user.id})}}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ?')">Supprimer mon compte</a>
                </div>
                                <div class="d-flex justify-content-center">
<button class="rounded bg-black mb-4 mt-4 w-25"><a href='{{ path('app_membre')}}'>Retour</a></button>
                </div>
</div>
{% endblock %}





